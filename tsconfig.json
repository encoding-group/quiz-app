{
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.collection"
    ]
  }
}
